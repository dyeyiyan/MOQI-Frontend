<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg">
    </RelativeLayout>

    <TextView
        android:id="@+id/ass_tv_titles"
        android:layout_marginTop="45dp"
        android:layout_marginRight="17dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:lineSpacingExtra="10dp"
        android:text="MUQI"
        android:textColor="@color/colorDarkWhite"
        android:textSize="60sp" />


    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@+id/ass_tv_titles"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:contentPadding="25dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="5dp"
                        android:text="LOG"
                        android:textColor="@color/colorPurple"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="5dp"
                        android:text="IN"
                        android:textColor="@color/colorLightGrey"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="5dp"
                        android:text="IN"
                        android:textColor="@color/colorPurple"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:lineSpacingExtra="5dp"
                        android:text="SPECTOR"
                        android:textColor="@color/colorLightGrey"
                        android:textSize="24sp" />

                </LinearLayout>

                <EditText

                    android:id="@+id/al_et_username"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_face"
                    android:inputType="text"
                    android:padding="15dp"
                    android:layout_marginTop="40dp"
                    android:hint="Username"
                    android:background="@drawable/edit_text_round"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>


                <EditText
                    android:id="@+id/al_et_password"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:layout_marginTop="25dp"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:hint="Password"
                    android:textColor="@color/colorLightGrey"
                    android:background="@drawable/edit_text_round"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </EditText>


                <Button
                    android:fontFamily="@font/roboto"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:id="@+id/al_btn_login"
                    android:background="@drawable/button_round"
                    android:text="Login"
                    android:textColor="@color/colorDarkWhite"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Button>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>